<!--pages/teacher/orderDetail.wxml-->
<view class='main_continer' style='background:{{title_bg}};height:100%;'>
  <include src='../common/title' />
  <view class='content'>

    <view style='width:80%;background:white;margin-left:auto;margin-right:auto;border-radius:10px;margin-top:20px;position:relative;padding-top:10px;'>
      <image src='{{userInfo.image}}' mode='scaleToFill' class='header_icon'></image>
      <view class='order_user_name'>陈小明</view>


      <view style='background:#edeff5;padding-bottom:20px;border-radius:10px;'>


        <view class='order_grade_name'>[高三]</view>
        <view class='order_subject_name'>地理</view>
        <view style='margin-left:20px;color:gray;width:100%;height:30px;'><view style='float:left;'>订单号:</view><view style='margin-left:10px;color:black;float:left;'>KC201804031000</view></view>
        <view style='margin-left:20px;color:gray;width:100%;height:30px;'><view style='float:left;'>授课老师:</view><view style='margin-left:10px;color:black;float:left;'>阿飞老师</view></view>
        <view style='margin-left:20px;color:gray;width:100%;height:30px;'><view style='float:left;'>授课时间:</view><view style='margin-left:10px;color:black;float:left;'>19：00~21：00</view></view>
        <view style='margin-left:20px;color:gray;width:100%;height:30px;'><view style='float:left;'>合计费用:</view><view style='margin-left:10px;color:orangered;float:left;'>20元</view></view>
        <view style='margin-left:20px;color:gray;width:100%;height:30px;'><view style='float:left;'>状态:</view><view style='margin-left:10px;color:orangered;float:left;'>上课中...</view></view>

         <button style='height:40px;border-radius:20px;background:{{btn_color}};color:white;width:90%;margin-left:auto;margin-right:auto;margin-top:10px;text-align:center;line-height:40px;' wx:if='{{order_type==1||order_type==2}}'>{{btn_text}}</button>
      </view>

      
    </view>



  </view>
</view>