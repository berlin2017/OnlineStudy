/* pages/student/search.wxss */
@import "../common/search_title.wxss";

.item_layout{
  width: 100%;
  height: 80px;
  border-bottom:1px solid gainsboro;
  overflow: hidden;
}

.item_image{
  float: left;
  width: 60px;
  height: 60px;
  border-radius: 30px;
  margin: 10px;
}

.item_text{
  float: left;
  margin-bottom: 10px;
  margin-top: 20px;
  display: flex;
  flex-direction: column;
}

.item_name{
  font-size: 17px;
  line-height: 20px;
}

.item_info{
  margin-top: 5px;
  color: gray;
  font-size: 13px;
  line-height: 20px;
}