<!--pages/student/walletDetail.wxml-->

<view class='main_container'>

  <include src='../common/title' />

  <view class='content'>
    <include src='../common/empty' wx:if='{{list.length<=0}}' />
    <include src='../common/empty' wx:if='{{!list}}' />
    <view class='list' wx:if='{{list.length>0}}'>
      <view class='item_layout' wx:for='{{list}}'>
        <view class='item_money'>
          <view style='float:left;'>交易金额：</view>
          <view style='color:orange;float:left;font-size:21px;line-height:30px;text-align:center;'>{{item.money}}元</view>
        </view>

        <!-- <view class='item_ddbh'>订单编号：{{item.out_trade_no}}</view> -->
        <view class='item_jybh'>交易编号：{{item.out_trade_no}}</view>
        <view class='item_time'>交易时间：{{item.time}}</view>
        <view class='item_time'>赠送金额：{{item.zeng_money}}</view>
      </view>
    </view>

  </view>

</view>