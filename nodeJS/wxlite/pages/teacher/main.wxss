/* pages/teacher/main.wxss */
@import '../common/title.wxss';

.top_image{
  width: 100%;
  height: 240px;
  background: #b7c5d6;
}

.item_layout{
  width: 94%;
  margin-left: auto;
  margin-right: auto;
  border-bottom: 1px solid gainsboro;
  height: 40px;
}

.item_name{
  float: left;
  line-height: 40px;
  text-align: center;
  color: gray;
}

.item_right{
  height: 40px;
  float: right;
  text-align: right;
  color: black;
}

.item_value{
  float: right;
  margin-right: 10px;
  line-height: 40px;
  text-align: center;
}

.item_arrow{
  width: 16px;
  height: 16px;
  float: right;
  margin-right: 10px;
  margin-top: 12px;
}

.bottom_layout{
  width: 100%;
  position: fixed;
  left: 0px;
  bottom: 0px;
  height: 40px;
  background: #7647a0;
  color: white;
  line-height: 40px;
  text-align: center;
  z-index: 1000000;
}