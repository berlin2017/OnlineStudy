/* pages/student/user.wxss */

.top_header {
  background: #7647a0;
  width: 100%;
}

.header_image {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  margin-left: 20px;
  margin-right: 10px;
  margin-top: 40px;
  margin-bottom: 20px;
  float: left;
}

.header_info_layout {
  display: flex;
  flex-direction: column;
}

.name_text {
  color: white;
  font-size: 19px;
  line-height: 30px;
  margin-top: 40px;
  float: left;
}

.mobile_text {
  color: white;
  font-size: 15px;
  line-height: 20px;
}

.grade_text {
  padding-left: 15px;
  padding-right: 15px;
  margin-right: 10px;
  /* float: left; */
  display: inline;
  color: black;
  font-size: 13px;
  line-height: 20px;
  background: white;
  border-radius: 10px;
}

.header_arrow {
  width: 30px;
  height: 30px;
  margin-top: 55px;
  margin-right: 10px;
  float: right;
}

.user_money_layout {
  background-color: rgba(0, 0, 0, 0.2);
  margin-top: 20px;
  width: 100%;
  display: flex;
  position: relative;
}

.user_money_image {
  margin: 10px;
  float: left;
  width: 20px;
  height: 20px;
  padding: 10px;
  border-radius: 20px;
  background: orange;
}

.user_money_name {
  margin-left: 10px;
  float: left;
  line-height: 60px;
  text-align: center;
  color: white;
  font-size: 15px;
}

.header_arrow2 {
  position: absolute;
  width: 20px;
  height: 20px;
  right: 10px;
  bottom: 20px;
}

.user_money_number {
  position: absolute;
  line-height: 60px;
  text-align: center;
  font-weight: bold;
  color: white;
  font-size: 21px;
  right: 40px;
}

.center_layout{
  width: 94%;
  /* margin-left: auto;
  margin-right: auto;
  margin-top: 10px;
  margin-bottom: 10px; */
  margin: 3% auto;
}

.option1_layout{

  background: #7647a0;
  float: left;
  position: relative;
  border-top-right-radius: 20px;
  border-bottom-left-radius: 20px;
}

.option2_layout{
  background: #7647a0;
  float: right;
  position: relative;
  border-top-left-radius: 20px;
  border-bottom-right-radius: 20px;
}

.option3_layout{
  margin-top: 3%;
  background: #7647a0;
  float: left;
  position: relative;
  border-top-left-radius: 20px;
  border-bottom-right-radius: 20px;
}

.option4_layout{
  margin-top: 3%;
  background: #7647a0;
  float: right;
  position: relative;
  border-top-right-radius: 20px;
  border-bottom-left-radius: 20px;
}


.option1_value{
  position: absolute;
  color: white;
  font-size: 80px;
  bottom:40px;
  width: 100%;
  text-align: center;
}

.option1_name{
  width: 100%;
  position: absolute;
  line-height: 30px;
  bottom: 10px;
  color: white;
  font-size: 17px;
  text-align: center;
}

.user_help_layout{
  width: 100%;
  height: 60px;
  border-bottom: 1px solid gainsboro;
  border-top: 1px solid gainsboro;
}

.user_help_image{
  float: left;
  width: 20px;
  height: 20px;
  padding: 10px;
  margin-top: 10px;
  margin-left: 10px;
  border-radius: 20px;
  background: green; 
}

.user_help_text{
  margin-left: 10px;
  line-height: 60px;
  text-align: center;
  float: left;
}

.user_help_arrow{
  width: 20px;
  height: 20px;
  margin-top: 20px;
  margin-right: 10px;
  float: right;
}
